<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:foreground="?attr/selectableItemBackground">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/tv_search_att_info_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="赵智勋"
                android:textSize="15sp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/tv_search_num_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_search_att_info_name"
                android:layout_marginTop="2dp"
                android:text="学号："/>

            <TextView
                android:id="@+id/tv_search_att_info_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_search_att_info_name"
                android:layout_toRightOf="@+id/tv_search_num_temp"
                android:layout_marginTop="2dp"
                android:text="2014210533"
                android:textColor="@color/colorPrimary"/>

            <TextView
                android:id="@+id/tv_search_week_temp1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/tv_search_att_info_week"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="已考勤"/>

            <TextView
                android:id="@+id/tv_search_att_info_week"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/tv_search_att_info_temp2"
                android:layout_marginRight="10dp"
                android:text="5"
                android:textSize="25sp"
                android:textColor="@color/colorPrimary"/>

            <TextView
                android:id="@+id/tv_search_att_info_temp2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="次"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
